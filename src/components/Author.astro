---
import { Link } from "@/components/ui/link";
import { site_config } from "@/consts";
import { cn } from "@/lib/utils";

type Props = {
  handle?: boolean;
  class?: string;
};

const { handle, class: className } = Astro.props;
---

<Link className={cn([className])} href={site_config.socials.twitter} external>
  {handle ? "@" : ""}
  {site_config.author}
</Link>
